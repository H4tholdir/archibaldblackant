          // OTTIMIZZAZIONE: Aspetta che il popup si chiuda invece di 800ms fissi
          try {
            await this.page!.waitForFunction(
              (baseId: string) => {
                const popup = document.querySelector(
                  `#${baseId}_DDD`,
                ) as HTMLElement | null;
                return (
                  !popup ||
                  popup.style.display === "none" ||
                  popup.offsetParent === null
                );
