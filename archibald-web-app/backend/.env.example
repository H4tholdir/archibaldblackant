# JWT Secret for authentication
# IMPORTANT: Change this in production! Use a strong random string.
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-here

# PostgreSQL configuration
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=archibald
PG_USER=archibald
PG_PASSWORD=change-me-in-production
PG_MAX_CONNECTIONS=20

# Redis configuration (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379

# Operation queue configuration
QUEUE_CONCURRENCY=5

# Browser pool configuration
MAX_BROWSERS=3
MAX_CTX_PER_BROWSER=8

# Share feature - base URL for shared PDF links
SHARE_BASE_URL=https://your-domain.com

# SMTP configuration for email sharing
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM=Archibald <noreply@example.com>

# Dropbox configuration for PDF upload
DROPBOX_REFRESH_TOKEN=your-refresh-token
DROPBOX_APP_KEY=your-app-key
DROPBOX_APP_SECRET=your-app-secret
DROPBOX_BASE_PATH=/Archibald/Preventivi
